---
interface Props {
	title: string;
	description: string;
}
const { title, description } = Astro.props;
---
<div class="bg-white p-6 rounded-xl shadow-lg transform transition-all hover:scale-105 duration-300">
	<h3 class="text-xl font-bold text-indigo-600 mb-2">{title}</h3>
	<p class="text-gray-600">{description}</p>
</div>